{
  "success_url": "/",
  "env": {
    "APP_ENV": "prod",
    "APP_SECRET": {
      "generator": "secret",
    },
    "CORS_ALLOW_ORIGIN": {
      "required": true,
    },
    "TRUSTED_HOSTS": {
      "required": true,
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "https://github.com/negativetwelve/heroku-buildpack-subdir"
    }
  ],
  "scripts": {
    "postdeploy": "php bin/console doctrine:schema:create"
  }
}
